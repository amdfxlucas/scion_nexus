{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch client",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/examples/echo/nexus_echo_client",
            "args": [
                "localhost",
                    "3333",
                    "false",
                    "a.txt"


            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/examples/echo",
            // "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            //  ./nexus_echo_server localhost 3333 server.crt server.key false

            // ./nexus_echo_client localhost 5555 true  cert/bb.txt
            "name": "(gdb) Launch server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/examples/echo/nexus_echo_server",
            "args": ["localhost",
                    "5555",
                "certs/server.crt",
                "certs/server.key",
            "true"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/build/examples/echo",
            //"${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}